<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- Servlet Configuration -->
    <servlet>
        <servlet-name>BatchesServlet</servlet-name>
        <servlet-class>com.zumba.servlet.BatchesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ParticipantsServlet</servlet-name>
        <servlet-class>com.zumba.servlet.ParticipantsServlet</servlet-class>
    </servlet>

    <!-- Servlet Mapping -->
    <servlet-mapping>
        <servlet-name>BatchesServlet</servlet-name>
        <url-pattern>/batches</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ParticipantsServlet</servlet-name>
        <url-pattern>/participants</url-pattern>
    </servlet-mapping>

</web-app>
